@model asp_assignment.Models.BagStore.Order

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Order</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="OrderId" />
        <div class="form-group">
            <label asp-for="CheckoutBegan" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CheckoutBegan" class="form-control" />
                <span asp-validation-for="CheckoutBegan" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="GrandTotal" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="GrandTotal" class="form-control" />
                <span asp-validation-for="GrandTotal" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="OrderPlaced" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="OrderPlaced" class="form-control" />
                <span asp-validation-for="OrderPlaced" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="State" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="State" class="form-control">
                    <option value="0">CheckingOut</option>
                    <option value="1">Placed</option>
                    <option value="2">Filling</option>
                    <option value="3">ReadyToShip</option>
                    <option value="4">Shipped</option>
                    <option value="5">Delivered</option>
                    <option value="6">Cancelled</option>
                </select>
                <span asp-validation-for="State" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Total" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Total" class="form-control" />
                <span asp-validation-for="Total" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="UserId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
