@model asp_assignment.Models.BagStore.Product

<div class="panel panel-default" >
    <div class="panel-body" style="height: 350px">
        <div style="text-align: center;">
            <p title="@Model.DisplayName">
                @Html.ActionLink(Model.DisplayName, "Product", "Shop", new { id = Model.ProductId })
            </p>
            @if (Model.CurrentPrice == Model.MSRP)
            {
                <p>
                    <span style="font-size: large">$@Model.CurrentPrice</span> gst excl.
                    <br />
                    <br />
                </p>
            }
            else
            {
                <p>
                    <span class="text-success" style="font-size: large">$@Model.CurrentPrice</span> gst excl.<br />
                    <span class="text-danger"><del>$@Model.MSRP</del></span>
                    (save $@(Model.MSRP - Model.CurrentPrice))
                </p>
            }
            @if (Model.InStock == true)
            {
                <p><span class="text-success"> Item in Stock</span></p>
            }
            else
            {
                <p><span class="text-danger"> Item Not in Stock</span></p>
            }
            <img src="@Url.Content(Model.ImageUrl)" width="120" />
            <p>@Html.DisplayFor(modelItem => modelItem.Description)</p>
           
        </div>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add to Cart", "Add", "Cart", new { productId = Model.ProductId })
        <br />
        <small>SKU #@Model.SKU</small>
    </div>
</div>



